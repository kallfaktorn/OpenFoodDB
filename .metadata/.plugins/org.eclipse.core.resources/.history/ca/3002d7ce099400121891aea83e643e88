  $('#thumbs_up').bind('ajax:success', function(evt, data) {
  	$('#votes_id').text(data);
  });
  
  $(document).ready(function() {

    var i = 0;
    $("tr").each(function( j ) {
      
      i = (i + 1) % 2;
      var d = 'd' + i;
      if($(this).attr('class') == "NutritionTableRow")
        $(this).attr('class', "NutritionTableRow " + d);
    });
    
