<%= content_tag :tr do %>
  <%= content_tag :span, :class => "file" do %>
    <%= content_tag :td, :class => "left" do %>
  	  <%= content_tag :dd do %>
  	    <%= f.label label %>
  	  <% end %>
  	<% end %>
  	<%= content_tag :td, :class => "middle" do %>
      <%= f.number_field number, :step => "0.000001" %>
    <% end %>
    <%= content_tag :td, :class => "right", :width => "1px" do %>
      <%= content_tag :label do %>
        <%= unit %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
