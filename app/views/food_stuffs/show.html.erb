<script type="text/javascript">

  var foodStuffJSON = $("#food_stuff_json").html();
  var foodStuff     = $.parseJSON(foodStuffJSON);

  var auditsJSON = $("#audits_json").html();
  var audits     = $.parseJSON(auditsJSON);
  
  var history_hidden = true;
  
  var thumb_up_ids = new Array();
  var votes_ids = new Array();
  
  for(i in audits) {
    
    var id = audits[i].id;
    
    (function() {
      var thumb_up_id = "#thumbs_up" + id;
      var votes_id = "#votes_id" + id;
    
      $(thumb_up_id).bind('ajax:success', function(evt, data) {
        $(votes_id).text(data);
      });  
    }());
  }
  
  $(document).ready(function() {
    
    $('#votes_id').text(audits[i]);

    var i = 0;
    $("tr").each(function( j ) {

      i = (i + 1) % 2;
      var d = 'd' + i;
      var e = 'e' + i;

      if($(this).attr('class') == "NutritionTableRow")
        $(this).attr('class', "NutritionTableRow " + d);

      if($(this).attr('class') == "InformationTableRow")
        $(this).attr('class', "InformationTableRow " + e);
    });


    var history_div = $('#history_content');

    for(var i in audits) {
      
      var id = "_" + audits[i].id;
      var history_anchor = "<pre><div class='history' id='history" + id + "'" + "onclick='javascript:history_click(" + audits[i].id + ")'" + ">" + audits[i].created_at + "</div></pre>";
      history_div.append(history_anchor.replace("T", " ").replace("Z", ""));

      var history_data = "<div hidden='hidden' id='history" + id + "_d" + "'" + ">" + audits[i].id + "</div>";
      history_div.append(history_data);
    }
    
    var history_anchor_latest = "<pre><div class='history' " + "onclick='javascript:history_reset()'" + ">" + "Latest" + "</div></pre>";
    history_div.append(history_anchor_latest);
      
    $('.history').hide();

  });

  function history() 
  {
    if( history_hidden == false )
    {
      $('.history').hide();
      history_hidden = true;
    }
    else
    {
      $('.history').show();
      history_hidden = false;
    }
  }
  
  function history_reset()
  {
    var audit = "none";

    // Reset all changes to latest
    for(var i in audits) 
    {
      audit = audits[i];

      for(var j in audit.audited_changes)
      {
        var change = audit.audited_changes[j];
        var td_id = "#" + j + "_id";
        
        if(change != null) {
          $(td_id).text(change[1]);  
        }
      }
    }
  }

  function history_click(id)
  {
    var audit = "none";

    history_reset();
    
    $(".thumbs_up").hide();

    var ok_to_change = false;

    // Redo changes from selected to latest
    for(var i in audits) 
    {
      if(audits[i].id == id)
      {
        ok_to_change = true;
      }

      if(ok_to_change == true) {

        audit = audits[i];

        for(var j in audit.audited_changes)
        {
          var change = audit.audited_changes[j];
          var column_id = "#" + j + "_id";

          if(change != null) {
            $(column_id).text(change[0]);
          }
        }
      }
    }

    var thumb_up_id = "#thumbs_up" + id;
    $(thumb_up_id).show();

    var votes_id = "#votes_id" + id;
    $(votes_id).show();

  }

</script>