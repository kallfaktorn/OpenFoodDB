<!DOCTYPE html>
<html>
<head>
  <title>Openfooddb</title>
  <link rel="shortcut icon" href="/favicon.ico" />
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  

  


</head>
<body>

  

  

  <div id="container">
    <header>
      <div class="background">
        <div class="locale">
          <ul class="flags">
            <%= link_to image_tag("english_flag.gif"), switch_locale('en') %>
            <%= link_to image_tag("swedish_flag.gif"), switch_locale('se') %>
          </ul>
         </div> 
    

    <% if signed_in? %>
    <% if request.path_parameters == {:action=>"show", :controller=>"users", :id => "#{current_user.id}"} %>
    <% elsif request.path_parameters == {:controller=>"sessions", :action=>"show"} %>
    <% else %>
      <%= render 'layouts/greet_user' %>
    <% end %>
  <% else %>
    <% if request.path_parameters == {:controller=>"sessions", :action=>"new"} %>
    <% elsif request.path_parameters == {:controller=>"users", :action=>"new"} %>
    <% else %>
      <%= render 'layouts/sign_in_create_account' %>
    <% end %>
  <% end %>
    </div>
    <div class="headerline"></div>
    </header>
    
    

    <div id="main">
      <%= yield %>
    </div>
    
    <footer>
      <div class="footnote">
        <a href="http://additionalmind.se">Additionalmind</a> & <a href="http://google.se">Mattias Petterson Copyright 2012</a></div>
    </footer>
  </div> <!--! end of #container -->




</body>
</html>