<%= stylesheet_link_tag "shared" %>

<div class="container">
  <div class="row">
    <div class="span6 offset3">
      <%= form_for(:session, url: sessions_path) do |f| %>
      
      </br>
      </br>
      </br>
      </br>
      </br>
  
        <table>
          
          <tr>
            <td>
              <%= f.label t(:Sign_in_Label_Email) %>
            </td>
            <td>
              <%= f.text_field :email %>
            </td>
          </tr>
  
          <tr>
            <td>
              <%= f.label t(:Sign_in_Label_Password) %>
            </td>
            <td>
              <%= f.password_field :password %>
            </td>
          </tr>
  
          <tr>
            <td>
              <%= f.submit t(:Sign_in_Button_Sign_in), class: "btn btn-large btn-primary" %>
            </td>
          </tr>
  
        </table>
      <% end %>
  
      <p><%= t(:Sign_in_Text_New_user) %> <%= link_to t(:Sign_in_Link_Sign_up_now), signup_path, :class => 'account' %></p>
    </div>
  </div>
</div>