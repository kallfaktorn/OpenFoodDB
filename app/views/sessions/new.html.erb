<%= stylesheet_link_tag "shared" %>

<%= content_tag :div, :class => "container" do %>
  <%= content_tag :div, :class => "row" do %>
    <%= content_tag :div, :class => "span offset3" do %>
      <%= form_for(:session, url: sessions_path) do |f| %>
      
        </br>
        </br>
        </br>
        </br>
        </br>
  
        <%= content_tag :table do %>
        
          <%= content_tag :tr do %>
            <%= content_tag :td do %>
              <%= f.label t(:Sign_in_Label_Email) %>
            <% end %>
            <%= content_tag :td do %>
              <%= f.text_field :email %>
            <% end %>
          <% end %>
  
          <%= content_tag :tr do %>
            <%= content_tag :td do %>
              <%= f.label t(:Sign_in_Label_Password) %>
            <% end %>
            <%= content_tag :td do %>
              <%= f.password_field :password %>
            <% end %>
          <% end %>
  
          <%= content_tag :tr do %>
            <%= content_tag :td do %>
              <%= f.submit t(:Sign_in_Button_Sign_in), class: "btn btn-large btn-primary" %>
            <% end %>
          <% end %>
    
        <% end %>
      <% end %>
  
      <%= content_tag :p do %>
        <%= t(:Sign_in_Text_New_user) %>
        <%= link_to t(:Sign_in_Link_Sign_up_now), signup_path, :class => 'account' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>