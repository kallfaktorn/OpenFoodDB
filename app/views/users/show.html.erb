<%= stylesheet_link_tag "shared" %>

<%= content_tag :div, :class => "container" do %>
  
  <br />
  <br />
  <br />
  <br />
  
  <%= content_tag :table, :class => "profile", :summary => "Profile information" do %>
    <%= content_tag :tr do %>
      <%= content_tag :td, :class => "main" do %>
        <%= content_tag :h1 do %>
          <%= @user.name %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  
  <%= image_tag('thumb_up_green.jpg', :border => 0) %>
  <%= earned_thumbs_up %>
  
  &nbsp;
  &nbsp;
  &nbsp;
  
  <%= image_tag('pencil.png', :border => 0) %>
  <%= current_user.edit_points %>

  <br />
  <br />
  <br />
  <br />
  
  <%= link_to t(:User_Show_Link_Add_foodstuff), new_food_stuff_path, :class => 'account' %>

  <br />
  <br />

  <%= content_tag :p do %>
    <%= label_tag t(:User_Show_Label_FoodStuffs_added_by) %>
    <%= content_tag :strong do %>
      <%= @user.name %>
    <% end %>
  <% end %>
  
    
  
  <% @food_stuffs.each do |f| %>
    <% if f != nil %>
      <%= link_to f.name, f, :class => 'account' %> 
      <%= link_to t(:Button_Edit), edit_food_stuff_path(f), :class => 'account' %>
    <% end %>
    <br />
  <% end %>
  
  <br />
  <br />
  <%= link_to t(:User_Show_Label_Sign_out), signout_path, method: "delete", :class => 'account' %>
  <br />
  <%= link_to t(:Button_Home), home_index_path, :class => 'account' %>

<% end %>
